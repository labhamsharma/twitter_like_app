<div id="user-list" class="max-w-4xl mx-auto">
  <% @users.each do |user| %>
    <div class="user mb-4" id="user_<%= user.id %>">
      <div class="flex items-start gap-2.5">
        <div class="flex flex-col w-full max-w-[320px] leading-1.5 p-4 border-gray-200 bg-gray-100 rounded-e-xl rounded-es-xl dark:bg-gray-700">
          <div class="flex items-center space-x-2 rtl:space-x-reverse">
            <span class="text-sm font-semibold text-gray-900 dark:text-white"><%= user.username %></span>
            <!-- Additional user information can be displayed here -->
          </div>
          <!-- Additional user information can be displayed here -->
        </div>
        <%= link_to "Show", user_path(user), class: "flex-shrink-0 self-end px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  <% end %>
</div>
